#include <dt-bindings/zmk/matrix_transform.h>

&xiao_serial {
    status = "disabled";
};

&xiao_spi {
  status = "okay";
  cs-gpios = <&xiao_d 5 GPIO_ACTIVE_LOW>;
  shifter: 595@0 {
    compatible = "zmk,gpio-595";
    status = "okay";
    gpio-controller;
    spi-max-frequency = <200000>;
    reg = <0>;
    #gpio-cells = <2>;
    ngpios = <8>;
  };
};

&zephyr_i2c {
    status = "okay";
